<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"><meta name="renderer" content="webkit">

    <title><%=t('software.system')%></title>
    <meta name="keywords" content="<%=t('software.keywords')%>">
    <meta name="description" content="<%=t('software.description')%>">
    
    <%= stylesheet_link_tag    'application', :media => 'all', 'data-turbolinks-track' => true %>
    <link href="/css/bootstrap.min.css?v=3.3.0" rel="stylesheet">
    <link href="/font-awesome/css/font-awesome.min.css?v=4.3.0" rel="stylesheet">
    <link href="/js/plugins/layer/skin/layer.css" rel="stylesheet">
    <!-- Morris -->
    <link href="/css/plugins/morris/morris-0.4.3.min.css" rel="stylesheet">

    <!-- Gritter -->
    <link href="/js/plugins/gritter/jquery.gritter.css" rel="stylesheet">

    <link href="/css/animate.css" rel="stylesheet">
    <link href="/css/style.css?v=2.1.0" rel="stylesheet">
    <%= csrf_meta_tags %>

    <!-- Mainly scripts -->
    <script src="/js/jquery-2.1.1.min.js"></script>
    <script src="/js/bootstrap.min.js?v=3.3.0"></script>
    <script src="/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <!-- layer javascript -->
    <script src="/js/plugins/layer/layer.min.js"></script>
    <script>
        layer.use('extend/layer.ext.js'); //载入layer拓展模块
    </script>
    <!--加载页面必要assets-->
    <%= view_assets_tag%>
    <%=yield :head %>

</head>

<body>
    
<div id="wrapper">
    <%=render :partial=>"main/menu"%>
    <div id="page-wrapper" class="gray-bg dashbard-1">
        <div class="row border-bottom" id='change_padding' style="z-index: 3000;
            position: fixed;
            padding-right: 220px;
            height: 60px;
            width: 100%;">
            <%=render :partial=>"main/banner"%>
        </div>
        <%= yield %>

        <div class="row">
            <div class="col-lg-12">
                <%=render :partial=>"main/footer"%> 
            </div>
        </div>
    </div>
</div>


    <!-- Flot -->
    <script src="/js/plugins/flot/jquery.flot.js"></script>
    <script src="/js/plugins/flot/jquery.flot.tooltip.min.js"></script>
    <script src="/js/plugins/flot/jquery.flot.spline.js"></script>
    <script src="/js/plugins/flot/jquery.flot.resize.js"></script>
    <script src="/js/plugins/flot/jquery.flot.pie.js"></script>

    <!-- Peity -->
    <script src="/js/plugins/peity/jquery.peity.min.js"></script>
    <script src="/js/demo/peity-demo.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="/js/hplus.js?v=2.0.0"></script>

    <!-- jQuery UI -->
    <script src="/js/plugins/jquery-ui/jquery-ui.min.js"></script>

    <!-- GITTER -->
    <script src="/js/plugins/gritter/jquery.gritter.min.js"></script>

    <!-- EayPIE -->
    <script src="/js/plugins/easypiechart/jquery.easypiechart.js"></script>

    <!-- Sparkline -->
    <script src="/js/plugins/sparkline/jquery.sparkline.min.js"></script>

    <!-- Sparkline demo data  -->
    <script src="/js/demo/sparkline-demo.js"></script>
    <%= datepicker_include_tag %>
</body>

</html>